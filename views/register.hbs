<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black mt-4 mb-4" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Đăng ký</p>

                <form class="mx-1 mx-md-4 mt-1" action="/user/register" method="post" enctype="multipart/form-data">

                  <div class="d-flex flex-row align-items-center mb-0">
                    {{!-- <i class="fas fa-user fa-lg me-3 fa-fw"></i> --}}
                    <div class="form-outline flex-fill mb-0">
                      <input type="text" name="fullname" value="{{fullname}}" placeholder="Họ và tên" class="form-control" />
                      <label class="form-label" for="form3Example1c"></label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-0">
                    {{!-- <i class="fas fa-envelope fa-lg me-3 fa-fw"></i> --}}
                    <div class="form-outline flex-fill mb-0">
                      <input type="email" name="email" value="{{email}}" placeholder="Địa chỉ email" class="form-control" />
                      <label class="form-label" for="form3Example3c"></label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-0">
                    {{!-- <i class="fas fa-lock fa-lg me-3 fa-fw"></i> --}}
                    <div class="form-outline flex-fill mb-0">
                      <input type="text" name="phone" value="{{phone}}" placeholder="Số điện thoại" class="form-control" />
                      <label class="form-label" for="form3Example4c"></label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-0">
                    {{!-- <i class="fas fa-lock fa-lg me-3 fa-fw"></i> --}}
                    <div class="form-outline flex-fill mb-0">
                      <input type="text" name="address" value="{{address}}" placeholder="Địa chỉ" class="form-control" />
                      <label class="form-label" for="form3Example4c"></label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-0">
                    {{!-- <i class="fas fa-lock fa-lg me-3 fa-fw"></i> --}}
                    <div class="form-outline flex-fill mb-0">
                      <input type="date" name="birth" value="{{birth}}" id="birth" class="form-control" />
                      <label class="form-label" for="form3Example4c"></label>
                    </div>
                  </div>

                    <label for="front-idCard">Ảnh mặt trước CMND</label>
                   <div class="d-flex flex-row align-items-center mb-0">
                    {{!-- <i class="fas fa-lock fa-lg me-3 fa-fw"></i> --}}
                    
                    <div class="form-outline flex-fill mb-0">
                      <input type="file" name="frontID" accept='image/*' id="front-idCard" class="form-control"  />
                      <label class="form-label" for="form3Example4c"></label>
                    </div>
                  </div>
                    <label for="front-idCard">Ảnh mặt sau CMND</label>
                   <div class="d-flex flex-row align-items-center mb-0">
                    {{!-- <i class="fas fa-lock fa-lg me-3 fa-fw"></i> --}}
                    
                    <div class="form-outline flex-fill mb-0">
                      <input type="file" name="backID" accept='image/*' id="back-idCard" class="form-control" />
                      <label class="form-label" for="form3Example4c"></label>
                    </div>
                  </div>
                  {{#if error}}
                      <div class="alert alert-danger mt-2 mb-0">
                          {{error}}
                      </div>
                  {{/if}}
                  {{!-- <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4"> --}}
                    <button type="submit" class="dark-btn mt-2">Đăng kí</button>
                  {{!-- </div> --}}
                </form>
              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"class="img-fluid" alt="Sample image">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>