<div class="dark-body">


    <div class="section">
        <div class="container">
            <div class="row full-height justify-content-center">
                <div class="col-12 text-center align-self-center py-5">
                    <div class="section pb-5 pt-5 pt-sm-2 text-center">
                        <div class="card-3d-wrap-login mx-auto">
                            <div class="card-3d-wrapper">
                                <form action="" method="post">
                                    <div class="card-front">
                                        <div class="center-wrap">
                                            <div class="section text-center">
                                                <h4 class="mb-4 pb-3">Đặt lại mật khẩu</h4>
                                                <div class="form-group">
                                                    <input type="password" name="newPass" value="{{newPass}}"
                                                        class="form-style" placeholder="Mật khẩu mới"
                                                        autocomplete="off">
                                                    <i class="input-icon uil uil-at"></i>
                                                </div>
                                                <div class="form-group mt-2">
                                                    <input type="password" name="rePass" value="{{rePass}}"
                                                        class="form-style" placeholder="Xác nhận mật khẩu mới"
                                                        autocomplete="off">
                                                    <i class="input-icon uil uil-lock-alt"></i>
                                                </div>

                                                {{#if error}}
                                                <div class="alert alert-danger mt-2">
                                                    {{error}}
                                                </div>
                                                {{/if}}

                                                <button type="submit" class="dark-btn mt-4">Xác nhận</button>

                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>