<div class="container p-0 mx-auto payment-box">
    <div class="card px-4">
        <p class="h8 py-3">Chi tiết thanh toán</p>
        <span class="mb-3" style="color:black">Số dư trong ví: {{balance}} VND</span>
        <form action="/user/deposit" method="post">
            <div class="row gx-3">
                <div class="col-12">
                    <div class="d-flex flex-column">
                        <p class="text mb-1">Số tiền</p>
                        <input class="form-control mb-3" type="text" placeholder="0đ" name="amount">
                    </div>
                </div>
                <div class="col-12">
                    <div class="d-flex flex-column">
                        <p class="text mb-1">Mã thẻ</p>
                        <input class="form-control mb-3" type="text" placeholder="1234 5678 435678" name="card_no">
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex flex-column">
                        <p class="text mb-1">Thời hạn</p>
                        <input class="form-control mb-3" type="date" placeholder="MM/YYYY" name="expired">
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex flex-column">
                        <p class="text mb-1">Mã CVV</p>
                        <input class="form-control mb-3 pt-2 " type="password" placeholder="***" name="cvv_code">
                    </div>
                </div>
                {{#if error}}
                <span class="alert alert-danger">{{error}}</span>
                {{/if}}
                <div class="col-12">
                    <button class="btn btn-primary mb-3" type="submit">
                        <span class="ps-3">Xác nhận</span>
                        <span class="fas fa-arrow-right"></span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>