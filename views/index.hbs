                                    placeholder="Nhập mã CVV" />
                            </div>
                            <!-- Ghi chú -->
                            <div class="form-group d-flex flex-column gap-1">
                                <label for="inputWithdrawNote">Ghi chú</label>
                                <textarea name="note" type="text" class="form-control"
                                    id="inputWithdrawNote"></textarea>
                            </div>
                            <div class="form-group d-flex flex-column gap-1">
                                <label for="inputWithdrawAmountToWithdraw">Số tiền</label>
                                <input name="amount" type="text" class="form-control" id="inputWithdrawAmountToWithdraw"
                                    placeholder="Nhập số tiền" />
