                            <div class="form-group d-flex flex-column gap-1">
                                <label for="inputTransferCardNumber">Số điện thoại</label>
                                <input name="phone" type="text" class="form-control" id="inputTransferCardNumber"
                                    placeholder="Nhập số điện thoại người nhận" />
                            </div>
                            <!-- Tên người nhận -->
                            <div class="form-group d-flex flex-column gap-1">
