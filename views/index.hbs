                            <input type="file" class="form-control" id="inputUserIdCardFrontUpload" />
                        </div>
                        <!-- CMND mặt sau -->
                        <div class="form-group d-flex flex-column gap-1">
                            <label for="">CMND mặt sau</label>
                            <img src="" alt="" id="inputUserIdCardBack" />
                            <!-- Upload image -->
                            <input type="file" class="form-control" id="inputUserIdCardBackUpload" />
                        </div>
                        {{/if}}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            Đóng
                        </button>
                        {{#if requestID}}
                        <button type="button" class="btn btn-primary" id="btnNextToDepositConfirm">
                            Tiếp theo
                        </button>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Deposit Confirm -->
