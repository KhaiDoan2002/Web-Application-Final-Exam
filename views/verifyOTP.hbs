<div class="dark-body">

    <div class="section">
        <div class="container">
            <div class="row full-height justify-content-center">
                <div class="col-12 text-center align-self-center py-5">
                    <div class="section pb-5 pt-5 pt-sm-2 text-center">
                        <div class="card-3d-wrap-login mx-auto">
                            <div class="card-3d-wrapper">
                                <form method="post">
                                    <div class="card-front">
                                        <div class="center-wrap">
                                            <div class="section text-center">
                                                <h4 class="mb-4 pb-3">Nhập mã xác nhận</h4>
                                                <div class="form-group">
                                                    <input type="text" name="code" value="{{code}}" class="form-style"
                                                        placeholder="Mã OTP" autocomplete="off">
                                                    <i class="input-icon uil uil-at"></i>
                                                    <span id="timer"></span>
                                                </div>

                                                <div id="verify-alert">
                                                </div>

                                                {{#if error}}
                                                <div class="alert alert-danger mt-2">
                                                    {{error}}
                                                </div>
                                                {{/if}}

                                                <div id="verify-btn">
                                                    <button id="submit-verify" type="submit" class="dark-btn mt-4">Xác
                                                        nhận</button>
                                                    <a id="resend-btn" href="/user/resendOTP" style="display: none;"
                                                        class="dark-btn mt-4">Gữi lại
                                                        mã</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>